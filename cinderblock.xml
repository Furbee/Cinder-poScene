<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
	<block
		name="poScene" 
		id="com.potiondesign.poscene"
		git="git://github.com/Potion/Cinder-poScene.git"
		author="Potion Design"
		summary="Potion's Scene Graph for Cinder"
		license="modbsd"
		version="0.1"
		url="http://www.potiondesign.com"
		>

		<supports os="macosx" />
		<supports os="msw" />

		<header>src/poScene/poEventCenter.h</header>
		<source>src/poScene/poEventCenter.cpp</source>

		<header>src/poScene/poEvents.h</header>
		<source>src/poScene/poEvents.cpp</source>

		<header>src/poScene/poMatrixSet.h</header>
		<source>src/poScene/poMatrixSet.cpp</source>

		<header>src/poScene/poNode.h</header>
		<source>src/poScene/poNode.cpp</source>

		<header>src/poScene/poNodeContainer.h</header>
		<source>src/poScene/poNodeContainer.cpp</source>

		<header>src/poScene/poScene.h</header>
		<source>src/poScene/poScene.cpp</source>

		<header>src/poScene/poShape.h</header>
		<source>src/poScene/poShape.cpp</source>

		<header>src/poScene/poTextBox.h</header>
		<source>src/poScene/poTextBox.cpp</source>

		<header>src/poScene/poTextureFit.h</header>

		<platform os="macosx">
			<includePath>src/poScene</includePath>
		</platform>

		<platform os="msw">
			<includePath>src/poScene</includePath>
		</platform>

		<resource
            name="RES_GLSL_PO_MASK_VERT"
            type="IMAGE"
            id="128"
            >resources/poSceneResources/shaders/poMask_vert.glsl</resource>

		<resource
            name="RES_GLSL_PO_MASK_FRAG"
            type="IMAGE"
            id="129"
            >resources/poSceneResources/shaders/poMask_frag.glsl</resource>

	</block>

	<template>templates/Basic poScene/template.xml</template>
</cinder>