<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
	<block
		name="poScene" 
		id="com.potiondesign.poscene"
		git="git://github.com/Potion/Cinder-poScene.git"
		author="Potion Design LLC"
		summary="Potion's Scene Graph block for Cinder."
		license="BSD New"
		version="1.0"
		url="http://www.potiondesign.com"
		>

		<supports os="macosx" />
		<supports os="msw" />

		<headerPattern>src/poScene/*.h</headerPattern>
		<sourcePattern>src/poScene/*.cpp</sourcePattern>
		<source>src/poScene/poVideo.ipp</source>

		<platform os="macosx">
			<includePath>src/poScene</includePath>
		</platform>

		<platform os="msw">
			<includePath>src/poScene</includePath>
		</platform>

		<resource
            name="RES_GLSL_PO_MASK_VERT"
            type="IMAGE"
            id="128"
            >resources/poSceneResources/shaders/poMask_vert.glsl</resource>

		<resource
            name="RES_GLSL_PO_MASK_FRAG"
            type="IMAGE"
            id="129"
            >resources/poSceneResources/shaders/poMask_frag.glsl</resource>

	</block>

	<template>templates/Basic poScene/template.xml</template>
</cinder>